// pages/api/contact.ts

import type { NextApiRequest, NextApiResponse } from 'next';
import nodemailer from 'nodemailer';

export default async function handler(req: NextApiRequest, res: NextApiResponse) {
  if (req.method !== 'POST') return res.status(405).json({ success: false });

  const { name, phone, title, message } = req.body;

  try {
    const transporter = nodemailer.createTransport({
      service: 'gmail',
      auth: {
        user: process.env.MAIL_USER,       // Your Gmail
        pass: process.env.MAIL_PASS        // App password from Gmail
        // MAIL_USER=cosmostumietu@gmail.com
        // MAIL_PASS=@Laik1Cosmos1
        // MAIL_RECEIVER=cosmostumietu@gmail.com

      }
    });

    await transporter.sendMail({
      from: `"${name}" <${process.env.MAIL_USER}>`,
      to: process.env.MAIL_RECEIVER, // The email to receive the form
      subject: `Contact: ${title}`,
      text: `Name: ${name}\nPhone: ${phone}\n\nMessage:\n${message}`
    });

    res.status(200).json({ success: true });
  } catch (err) {
    res.status(500).json({ success: false });
  }
}
